@page
@model OnkelMato.BlogEngine.Pages.ExportModel
@{
    ViewData["Title"] = "Import";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card alert-info">
        <div class="card-body">
            <p>
                The following public certificates are configured for this blog: @Model.SignaturePrivateKeys.
            </p>
        </div>
    </div>

    @if (Model.AllowExportJwt)
    {
        <div class="col-sm-6">
            <div class="card">
                <form method="post" enctype="multipart/form-data">

                    <div class="card-header text-light bg-dark">
                        <h1>Export signed JWT </h1>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <input hidden="true" name="FormType" value="jwt" />
                        </div>
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ExportType" class="control-label col-sm-3"></label>
                                <input type="text" readonly asp-for="ExportType" class="form-control-plaintex" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <select class="form-select" aria-label="Select certificate" asp-for="SelectedCertificate">
                                    @for (int i = 0; i < Model.Certificates.Length; i++)
                                    {
                                        <option value="@i">@Model.Certificates[i]</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="CertificatePassword" class="control-label col-sm-3"></label>
                                <input type="password" asp-for="CertificatePassword" class="form-control" />
                                <span asp-validation-for="CertificatePassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <input type="submit" value="Export" class="btn btn-primary" />
                        <a asp-page="/Admin" class="btn btn-secondary">Back to Admin</a>
                    </div>
                </form>
            </div>
        </div>
    }


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
