@page
@using OnkelMato.BlogEngine.Core.Service
@model OnkelMato.BlogEngine.Pages.PostAdmin.DeleteModel
@inject ISeoProvider SeoProvider
@{
    SeoProvider.SetSiteInfo(Html, "Delete Post", "Blog Engine Post Deletion Page", "noindex, nofollow");
}


<div class="col-md-12">
    <form method="post">
        <div class="card">

            <div class="card-header text-light bg-dark">
                <h1>Delete Post</h1>
                <p>Are you sure you want to delete this image?</p>
            </div>

            <div class="card-footer">
                <input type="hidden" asp-for="Post.UniqueId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                <a asp-page="/Admin" class="btn btn-secondary">Back to Admin</a>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.MdPreview)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.MdPreview)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.MdContent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.MdContent)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.UpdatedAt)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.UpdatedAt)
                    </dd>
                </dl>

            </div>

            <div class="card-footer">
                <input type="hidden" asp-for="Post.UniqueId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                <a asp-page="/Admin" class="btn btn-secondary">Back to Admin</a>
            </div>
        </div>
    </form>
</div>
