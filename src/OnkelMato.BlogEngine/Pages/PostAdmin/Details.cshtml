@page
@model OnkelMato.BlogEngine.Pages.PostAdmin.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <form method="post">
        <div class="card">

            <div class="card-header text-light bg-dark">
                <h1>Post Details</h1>
            </div>

            <div class="card-footer">
                <a asp-page="Edit" asp-route-id="@Model.Post.UniqueId" class="btn btn-primary">Edit</a>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                <a asp-page="/Admin" class="btn btn-secondary">Back to Admin</a>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.Order)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.Order)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.ShowState)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.ShowState)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.MdPreview)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.MdPreview)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.MdContent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.MdContent)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.UpdatedAt)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Post.UpdatedAt)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Post.HeaderImage)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Post.HasHeaderImage)
                        {
                            <img src="@Url.Content($"/Image?id={Model.Post.HeaderImage}")" class="img-thumbnail" />
                        }
                    </dd>
                </dl>

            </div>

            <div class="card-footer">
                <a asp-page="Edit" asp-route-id="@Model.Post.UniqueId" class="btn btn-primary">Edit</a>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                <a asp-page="/Admin" class="btn btn-secondary">Back to Admin</a>
            </div>
        </div>
    </form>
</div>
