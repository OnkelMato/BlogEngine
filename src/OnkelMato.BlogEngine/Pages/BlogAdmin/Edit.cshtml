@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model OnkelMato.BlogEngine.Pages.BlogAdmin.EditModel

@{
    ViewData["Title"] = "Edit Blog";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    @if (Model.AllowBlogAdministration)
    {
        <div class="col-md-6">
            <form method="post">
                <div class="card">

                    <div class="card-header text-light bg-dark">
                        <h1>Edit Blog Properties</h1>
                    </div>

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Blog.UniqueId" />
                        <div class="form-group">
                            <label asp-for="Blog.Title" class="control-label"></label>
                            <input asp-for="Blog.Title" class="form-control" />
                            <span asp-validation-for="Blog.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Blog.Description" class="control-label"></label>
                            <textarea asp-for="Blog.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Blog.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card-footer">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-page="/Admin" class="btn btn-secondary">Back to Admin</a>
                    </div>
                </div>
            </form>
        </div>
    }
    <div class="col-md-6">
        <div class="card">

            <div class="card-header text-light bg-dark">
                <h1>Blog Engine Properties</h1>
            </div>

            <div class="card-body">
                <div class="form-group">
                    <label asp-for="EngineInfo.Version" class="control-label"></label>
                    <input readonly asp-for="EngineInfo.Version" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EngineInfo.BranchName" class="control-label"></label>
                    <input readonly asp-for="EngineInfo.BranchName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EngineInfo.VersionSourceSha" class="control-label"></label>
                    <input readonly asp-for="EngineInfo.VersionSourceSha" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EngineInfo.UncommittedChanges" class="control-label"></label>
                    <input readonly asp-for="EngineInfo.UncommittedChanges" class="form-control" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
