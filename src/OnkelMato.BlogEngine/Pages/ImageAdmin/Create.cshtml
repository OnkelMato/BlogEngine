@page
@model OnkelMato.BlogEngine.Pages.ImageAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PostImage</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostImage.File" class="control-label"></label>
                <input type="file" asp-for="PostImage.File" />
                <span asp-validation-for="PostImage.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostImage.Name" class="control-label"></label>
                <input asp-for="PostImage.Name" class="form-control"/>
                <span asp-validation-for="PostImage.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostImage.AltText" class="control-label"></label>
                <input asp-for="PostImage.AltText" class="form-control"/>
                <span asp-validation-for="PostImage.AltText" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PostImage.IsPublished"/> @Html.DisplayNameFor(model => model.PostImage.IsPublished)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
