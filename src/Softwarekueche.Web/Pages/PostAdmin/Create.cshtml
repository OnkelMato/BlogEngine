@page
@model Softwarekueche.Web.Pages.PostAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.MdPreview" class="control-label"></label>
                <textarea asp-for="Post.MdPreview" class="form-control" rows="20" ></textarea>
                <span asp-validation-for="Post.MdPreview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.MdContent" class="control-label"></label>
            <textarea asp-for="Post.MdContent" class="form-control" rows="20"></textarea>
                <span asp-validation-for="Post.MdContent" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Post.IsPublished" class="control-label"></label>
                <input asp-for="Post.IsPublished" class="form-check-input" />
                <span asp-validation-for="Post.IsPublished" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
