{
  "ConnectionStrings": {
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Blog": {
    // in multi blog scenarios, the unique ID of the blog to be used. Required if multiple blogs exist.
    "BlogUniqueId": "9a4e68fd-9275-4741-8108-9d1b0361a806",

    // in case no unique ID is given, the single blog found will be used. If multiple blogs exist, an error will be thrown.
    "UseSingleBlog": false,

    // if true, a blog with the given unique ID will be created if it does not exist yet
    "CreateBlogIfNotExist": true,

    // in case of multiple blogs, enable selection of the blog via a dropdown in the UI
    "EnableBlogSelection": true,

    // primary language of the blog
    "Language": "de-DE",

    // show and allow post/image/tag administration links. 
    "AllowAdministration": true,

    // number of posts per page
    "PostsPerPage": 12
  },
  "ImportExport": {
    // certificate options
    "ValidateCertificates":  false,

    // JWT token import and export ()
    "EnableJwtImport": true,
    "JwtPublicCertificates": [ "demo.crt" ],
    "EnableJwtExport": true,
    "JwtPrivateCertificates": [ "demo.key" ],
    "JwtPrivateCertificatePasswords": [ "" ],

    // JSON import and export (no signing supported)
    "EnableJsonFileImport": true,
    "EnableJsonStringImport": true,
    "EnableJsonExport": true,

    // Enable Sync from (public) blog engine
    "EnableBlogSync": true
  }
}
