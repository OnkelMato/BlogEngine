{
  "ConnectionStrings": {
    "DefaultProvider": "sqlite",
    "DefaultConnection": "Data Source=/data/blogs.db;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // system configuration settings
  "SystemConfig": {
    "DataProtectionKeysPath": "/data/keys/"
  },
  // blog general settings
  "Blog": {
    // in multi blog scenarios, the unique ID of the blog to be used. Required if multiple blogs exist.
    "BlogUniqueId": null,

    // if true, a blog with the given unique ID (or new id) will be created if it does not exist yet
    "CreateBlogIfNotExist": true,

    // in case of multiple blogs, enable selection of the blog via a dropdown in the UI or through parameter. This enables a middleware to rewrite the configuration.
    "EnableBlogSelection": false,

    // primary language of the blog
    "Language": "de-DE",

    // show and allow post/image/tag administration links. 
    "AllowAdministration": false,
    "AllowBlogCreation": false,
    "AllowBlogDeletion": false,

    // number of posts per page
    "PostsPerPage": 15
  },
  // blog import and export settings
  "ImportExport": {
    // certificate options
    "ValidateCertificates": true,

    // JWT token import and export
    "EnableJwtImport": true,
    "JwtPublicCertificates": [],
    "EnableJwtExport": false,
    "JwtPrivateCertificates": [],

    // JSON import and export settings
    "EnableJsonFileImport": false,
    "EnableJsonStringImport": false,
    "EnableJsonExport": false,

    // Sync to a remote page (export). Uses automated JWT upload
    "EnableSyncToRemote": false,

    // Enable Sync from (public) blog engine. Needs to be activated at both ends
    "EnableBlogExportSync": false,
    "EnableBlogImportSync": false,
    "BlogSyncSecret": "" // set in case of remote sync
  }
}