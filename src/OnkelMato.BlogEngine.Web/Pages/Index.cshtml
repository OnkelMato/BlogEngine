@page
@using System.Web
@using Microsoft.AspNetCore.Html
@using Microsoft.AspNetCore.Http.Extensions
@model IndexModel

@{
    Html.SetSeoInfo(seo =>
    {
        seo.SetCommonInfo(Model.Title, Model.Description, ViewContext.HttpContext.Request.GetDisplayUrl(), []);
    });
}

<!--
   Blog Engine Version: @typeof(Program).Assembly.GetName().Version
-->

<div class="row">
    @foreach (var item in Model.Posts)
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header text-light bg-dark post-header" style="background-image: url('/Image?id=@(item.HeaderImage)');">
                </div>
                <div class="card-body text-light bg-dark post-title">
                    @if (item.HasContent)
                    {
                        <a href="/Post/@item.TitleSEO/@item.UniqueId" class="link-light link-underline-0">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    }
                    @if (!item.HasContent)
                    {
                        @Html.DisplayFor(modelItem => item.Title)
                    }
                </div>
                <div class="card-body">
                        @(new HtmlString(item.HtmlPreview))
                        @foreach (var tag in (item.Tags)
    )
                        {
                            <a href="?tag=@tag"><span class="badge bg-secondary">@tag</span></a>
                        }
                </div>
                <div class="card-footer text-right">
                    @if (item.HasContent)
                    {
                        <a href="/Post/@item.TitleSEO/@item.UniqueId" class="btn btn-dark">
                            <i class="bi bi-arrow-right-circle"></i> Lesen
                        </a>
                    }
                    @if (Model.AllowBlogAdministration)
                    {
                        <a asp-page="/PostAdmin/Edit" asp-route-id="@item.UniqueId" asp-route-redirect_uri="/Post/@item.TitleSEO/@item.UniqueId" class="btn btn-dark">
                            <i class="bi bi-pen"></i> Bearbeiten
                        </a>
                        <a asp-page="/Export" asp-route-exporttype="post" asp-route-id="@item.UniqueId" class="btn btn-warning">
                            <i class="bi bi-save"></i> Exportieren
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

@*
    The pagination is only shown if there are more than one page.
    The current page is highlighted and the first and last page links are shown. 
*@
@if (Model.NumOfPages > 1)
{
    <div class="d-flex justify-content-center">
        <nav aria-label="">
            <ul class="pagination">
                @if (Model.CurrentPage != 1)
                {
                    <li class="page-item"><a class="page-link" href="?CurrentPage=1"><i class="bi bi-skip-start-circle"></i></a></li>
                }
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)"><i class="bi bi-arrow-left-circle"></i></a></li>
                }
                @for (int i = 1; i <= Model.NumOfPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? " active" : "")"><a class="page-link" href="?CurrentPage=@(i)">@(i)</a></li>
                }
                @if (Model.CurrentPage < Model.NumOfPages)
                {
                    <li class="page-item"><a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)"><i class="bi bi-arrow-right-circle"></i></a></li>
                }
                @if (Model.CurrentPage != Model.NumOfPages)
                {
                    <li class="page-item"><a class="page-link" href="?CurrentPage=@Model.NumOfPages"><i class="bi bi-skip-end-circle"></i></a></li>
                }
            </ul>
        </nav>
    </div>
}
